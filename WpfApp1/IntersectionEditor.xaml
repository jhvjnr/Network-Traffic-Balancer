             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d"
             FontFamily="Segoe UI">
    <DockPanel>
        <TextBlock Background="White" Text="{Binding Path=IntersectionName}" DockPanel.Dock="Top" OverridesDefaultStyle="True" >

        </TextBlock>
