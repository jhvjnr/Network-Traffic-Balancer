        <StackPanel>
            <DataGrid x:Name="grdData" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Inflow" Binding="{Binding Inflow}"/>
                    <DataGridTextColumn Header="Outflow" Binding="{Binding Outflow}"/>
                    <DataGridTemplateColumn Header="Fan">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DataGrid ItemsSource="{Binding Fan}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                                        <DataGridTextColumn Header="Count" Binding="{Binding Flow}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
               <!-- <DataGrid.Items>
                    <ItemContainerTemplate/>
                    <ItemContainerTemplate/>
                    <ItemContainerTemplate/>
                    <ItemContainerTemplate/>
                </DataGrid.Items>-->
            </DataGrid>
            <UniformGrid Rows="1">
                <Button x:Name="btnSave" Grid.Column="1" Content="Close" Click="btnSave_Click"/>
            </UniformGrid>
        </StackPanel>
    </DockPanel>
